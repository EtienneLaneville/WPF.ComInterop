<UserControl x:Class="Wpf.A.UserControlA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Wpf.A"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             mc:Ignorable="d" 
             Background="LightCoral"
             d:DesignHeight="250" d:DesignWidth="400">

    <UserControl.Resources>
        <sys:String x:Key="MyDate">12/24/1998</sys:String>
        <sys:String x:Key="MyString">McKinley</sys:String>
    </UserControl.Resources>

    <Grid>

        <StackPanel Orientation="Vertical">

            <TextBlock Text="WpfA UserControl" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <TextBlock Text="{StaticResource MyDate}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <!--<TextBlock Text="{Binding Source={StaticResource MyDate}, Converter={StaticResource DateConverter}, Mode=OneWay}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

            <TextBlock Text="{Binding Source={StaticResource MyString}, Converter={StaticResource UpperCaseConverterB}, Mode=OneWay}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>-->

            <!--<log:EventListUserControl />-->

        </StackPanel>

    </Grid>
</UserControl>
